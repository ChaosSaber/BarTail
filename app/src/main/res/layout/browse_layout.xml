<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browsen"
            android:layout_weight="1"
            android:background="#ff880015"
            android:textColor="#ffffffff"
            android:id="@+id/but_browse_top"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suchen"
            android:layout_weight="1"
            android:onClick="onclickSearchOpen"
            android:textColor="#ffffffff"
            android:background="#ff880015"
            android:id="@+id/but_search_top"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bar hinzufÃ¼gen"
            android:layout_weight="1"
            android:onClick="onclickAddbarOpen"
            android:background="#ff880015"
            android:textColor="#ffffffff"
            android:id="@+id/but_addbar_top"/>

    </LinearLayout>
</RelativeLayout>

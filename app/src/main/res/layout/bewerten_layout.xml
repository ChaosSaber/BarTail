<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.karsten_adolf.bartail_demo.BewertenActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Rating:"
        android:textSize="17dp"
        android:textColor="#ff000000"
        android:id="@+id/tv_rating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_rating"
        android:text="Kommentar:"
        android:textSize="17dp"
        android:textColor="#ff000000"
        android:id="@+id/tv_Kommentar" />

    <EditText
        android:layout_width="wrap_content"
        android:minWidth="250dp"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_Kommentar"
        android:hint="Kommentar"
        android:textSize="17dp"
        android:textColor="#ff000000"
        android:id="@+id/et_kommentar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_kommentar"
        android:textSize="17dp"
        android:textColor="#ff000000"
        android:id="@+id/tv_ausgabe" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bewerten"
        android:onClick="onclickbewerten"
        android:id="@+id/but_bewerten"
        android:layout_above="@+id/but_cancel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#ff880015"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZurÃ¼ck"
        android:layout_toEndOf="@+id/but_submit"
        android:layout_toRightOf="@+id/but_submit"
        android:onClick="onclickcancel"
        android:id="@+id/but_cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffffff"
        android:background="#ff880015" />

</RelativeLayout>
